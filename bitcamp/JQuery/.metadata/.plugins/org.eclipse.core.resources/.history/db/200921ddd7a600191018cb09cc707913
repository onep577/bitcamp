<script type="text/javascript">
var count = 0;
$(function () {
	$("#Btn").click( function () {
		
		if(count > 0){
			$('img').removeClass();
			
			count = 0;
			console.log("remove"+count);
		}
		
		$('img').addClass('bg bd');
		count++;
		console.log("3"+count);
			
	});
	
	
});
</script>

