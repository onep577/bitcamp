JQuery
<p id="ptag">JQuery로 P tag 클릭</p>
<button type="button">JQuery로 button 클릭</button>


<script type="text/javascript">
$(document).ready(function () {
	
});
// 위와 아래의 차이는 처리 속도가 다르다
$(function (){
	/*
	$("#ptag").click(function () {
		alert("P tag click");
	});
	
	// function 뒤 ()는 매개변수가 들어가고 {}는 코드가 들어간다
	$("button").click(function () {
		// button 대신 #id명을 넣어도 된다
		alert("Buttion click");
	});
	*/
	
	/*
	$("#ptag").on("click", function () {
		alert("on P tag click");
	});
	*/
	
	$("#ptag").on("click", clickFunc);
	// 매개변수가 없을 때 이렇게 적고 매개변수 있을 때는 매개변수 적어야한다
	
});


function clickFunc(){
	alert("clickFunc() 호출");
}

</script>




