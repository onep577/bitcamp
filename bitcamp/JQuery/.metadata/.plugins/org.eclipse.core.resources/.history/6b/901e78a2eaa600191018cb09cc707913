<p>p tag</p>

<div>
	<p>div in p tag1</p>	
	<p>div in p tag2</p>
	<b>div in b tag3</b>
</div>

<script type="text/javascript">
/* 
$(document).ready(function () {
	
});
 */
$(function () {
	
	$('p').click(function () {
		// 모든 p 태그를 클릭했을 때 적용된다
		alert("p tag click");
	});
	/**/
	 
	 
	 $('div p').click(function () {
		// div안에 있는 모든 p 태그를 클릭했을 때 적용된다
		 alert("div p tag click");
		$('div p').hide();		// < - > show()
		// 지워진게 아니라 감춰진거다
	 });
	 /**/
	 
	 $('div b').click(function () {
		 
	 });

	 $('p').on("click", function () {
		// $('p').hide();
		// 세 개 중 하나의 p태그를 클릭하면 세 개의 p 태그가 전부 사라진다
		//$(this).hide();
		// 세 개 중 하나의 p태그를 클릭하면 클릭한 p태그만 사라진다
		$(this).css("background", "#00ff00");	// setter
		// property명과 value
		
		var color = $(this).css("background");	// getter
		// property명
		alert(color);
	 });
});

</script>
