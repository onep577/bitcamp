<!-- 
	Java Script: client 언어 (화면). front end. web server 관련없다
	
	CSS(Cascading Style Sheet): 디자인. front end
	
	JQuery : Java Script의 경량화. 간략화 해 놓은 것. client 언어
			 Ajax를 포함. server + client
			 DOM(Document Object Model)을 단순화 시켜 놓은 것이다.
			 
	JQuery-UI : 버튼, 슬라이드...
	
				this -> 자기 자신을 가리키는 Object
	
 -->

<p>여기가 p태그입니다</p>

<p id="demo">여기가 p태그입니다. id demo</p>

<h3 id="demo">여기가 h3태그입니다. id demo</h3>

<p class="cls">여기가 p태그입니다. class cls</p>

<h3 class="cls">여기가 h3태그입니다. class cls</h3>

<pre>
입력 : <input type="text" id="tid" value="abcde">

<!-- java script를 사용할 때 -->
<!-- <button type="button" id="btn" onclick="func()">입력</button> -->

<!-- JQuery를 사용할 때
jQuery보다 java script가 더 우선시 된다
즉, .click함수보다 onclick이 더 우선시 되기 때문에 둘 중에 하나는 지워야한다
-->
<button type="button" id="btn">입력</button>
</pre>






<script type="text/javascript">
/* 
var arrPtag = document.getElementsByTagName("p");
// 모든 p태그를 배열로 가져온다

for(i = 0; i < arrPtag.length; i++){
	arrPtag[i].innerHTML = "Hello P tag";
}
// java script 형식 모든 p태그의 값을 Hello P tag로 바꾼다
*/



$(document).ready(function (){
//	alert("JQuery 실행");
	
	/*
		$(태그명 or class or id).핸들러 함수명(파라메터 값)
	*/
	/*
		$(태그명 or class or id).핸들러 함수명(파라메터 값).핸들러 함수명(파라메터 값)
		핸들러 함수는 여러개 사용 가능하다
	*/
	//$("p").html("Hello P tag");
	// JQuery 형식
	//	모든 p태그의 값을 Hello P tag로 바꾼다
	// == for(i = 0; i < arrPtag.length; i++){
	//		arrPtag[i].innerHTML = "Hello P tag";
	// }
	
	// .html 이 자바스크립트의 innerHTML이다
	// java script를 접근하기 편하게 만들어 놓은 것이 JQuery이다
	
//	$("p").text("Hello P tag JQeury");
//	$("p").text("<b>Hello P tag JQuery</b>");
	
	// java script 방식 1
//	var demo = document.getElementById("demo").innerHTML;	// getter
//	document.getElementById("demo").innerHTML = "World JS";	// setter

	// JQuery 방식 1
	var demo = $("#demo").text();	// getter
	alert(demo);
	$("#demo").text( "World JQuery" );	// setter
	// 일반 태그의 값을 가져올 때 .text() 함수를 사용한다
	
	// JQuery 방식 2
	// btn이라는 id를 클릭했을 때 텍스트 필드의 값을 가져오거나 넣는다
	$("#btn").click(function () {
		var text = $("#tid").val(); // getter
		alert("JQuery getter : " + text);
		$("#tid").val("안녕하세요");
	});
	
});

/*
